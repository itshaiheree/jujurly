{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes":[
        {
            "src": "/api/(.*)",
            "dest": "app.js"
        },
        {
            "src": "/",
            "dest": "app.js"
        },
        {
            "src": "/(.+)",
            "dest": "public/$1"
        }
    ]
    "rewrites": [{ "source": "/api/(.*)", "destination": "/api/404.js" }]
}